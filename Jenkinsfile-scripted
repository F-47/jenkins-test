node("agent-ubuntu"){
    def maven = tool name: "Maven3", type: "maven"
    def jdk = tool name: "java-11", type: "jdk"
    stage("Build"){
        steps{
            sh "java -version"
            sh '''
            env.PATH = "${maven}/bin:${env.PATH}"
            '''
            sh "java -version"
            sh "mvn package install"
        }
    }
    stage("Test"){
        sh "mvn test"
    }
}